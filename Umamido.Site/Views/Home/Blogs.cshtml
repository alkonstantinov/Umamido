@model Umamido.Common.BlogRowModel[]

@{
    ViewBag.Title = Umamido.Resources.Resources.Blogs;
}

<div id="hero">
    <div class="hero-content">
        <div class="container">
            <h1 class="hero-title">@Umamido.Resources.Resources.Blogs</h1>
        </div>
    </div><!-- .hero-content -->
    <div class="hero-image" style="background: url(images/blog_hero.jpg); background-size: cover; background-position: center center;"></div>
</div><!-- #hero -->

<div id="content" class="site-content">
    <div id="primary" class="content-area">
        <main id="main" class="site-main">
            <div class="container posts-container">
                <div class="row posts-row" style="position: relative; height: 600px;">

                    @for (int i = 0; i < Model.Length; i++)
                    {
                        int left = i * 413;
                        <div class="col-xs-12 col-sm-6 col-md-4 post-col" style="position: absolute; left: @left.ToString()px; top: 0px;">
                            <article id="post-423" class="post-423 post type-post status-publish format-standard has-post-thumbnail hentry category-food">
                                <div class="post-thumbnail">
                                    <a href="home/blog?blogid=@Model[i].BlogId" title="@Model[i].FirstDescriptionNoHtml"><img width="370" height="270" src="home/getimage?imageid=@Model[i].ImageId" class="attachment-belise-post-image size-belise-post-image wp-post-image" alt=""></a>
                                </div>
                                <header class="entry-header">
                                    <h2 class="entry-title" style="min-height:60px;">
                                        <a href="home/blog?blogid=@Model[i].BlogId" rel="bookmark">@Model[i].FirstDescriptionNoHtml</a>
                                    </h2>
                                    <div class="entry-meta">
                                        <span class="posted-on"><a href="#" rel="bookmark"><time class="entry-date published">@Model[i].OnDate.ToString()</time></a></span>
                                    </div><!-- .entry-meta -->
                                </header><!-- .entry-header -->
                                <div class="entry-content">
                                    <p>@Model[i].FirstDescriptionShort</p>
                                </div><!-- .entry-content -->
                            </article><!-- #post-## -->
                        </div>
                    }
                    
                </div>
            </div><!-- .posts-container -->
            <div class="container">
                <div class="row">
                </div>
            </div>
        </main><!-- #main -->
    </div><!-- #primary -->
</div>


<section class="ribbon-sidebar">
    <div id="belise_ribbon-widget-3">
        <div class="container">
            <div class="row"></div>
        </div>
        <div class="ribbon">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 col-md-offset-1 text-center ribbon-content">
                        <h5>Запишете се за нашия бюлетин</h5>
                        <h3>Научавайте първи за нашите нови предложения</h3>
                        <a href="#" class="btn">Записване</a>
                    </div>
                </div>
            </div>
            <div class="ribbon-image" style="background: url(images/subscribe_bgr.jpg); background-size:cover;)"></div>
        </div>
        <div class="container">
            <div class="row"></div>
        </div>
    </div>
</section>

<div class="clear"></div>


