@model Umamido.Common.InvoiceAddressModel

@{
    ViewBag.Title = "MyProfileAddress";
}
<div id="hero">
    <div class="hero-content">
        <div class="container">
            <h1 class="hero-title">@Resources.MyProfile</h1>
        </div>
    </div><!-- .hero-content -->
    <div class="hero-image" style="background: url(images/contacts_hero.jpg); background-size: cover; background-position: center center;"></div>
</div><!-- #hero -->




<div id="content" class="site-content">

    <div id="container">
        <section class="rest-descr" style="padding-top:10px; padding-bottom:10px;">
            <div class="container">

                <!--<div class="categories-menu-toggle">
                    <button class="menu-toggle" aria-controls="categories-menu" aria-expanded="false">Ресторанти</button>
                </div>-->
                <nav id="categories-menu" class="categories-navigation site-navigation">
                    <div class="menu-shop-menu-container">
                        <ul id="categories-menu" class="menu nav-menu" aria-expanded="false">
                            <li id="menu-item-500" class="menu-item rest-menu-item">
                                <a href="/Home/MyProfile">@Resources.YourOrders</a>
                            </li>
                            <li id="menu-item-394" class="menu-item rest-menu-item ">
                                <a href="/Home/MyAccountProfile">@Resources.ProfileEdit</a>
                            </li>
                            <li id="menu-item-392" class="menu-item rest-menu-item current-rest">
                                <a href="/Home/MyProfileAddress">@Resources.Addresses</a>
                            </li>
                            <li id="menu-item-395" class="menu-item rest-menu-item">
                                <a href="/Home/QuitProfile">@Resources.Exit</a>
                            </li>
                        </ul>
                    </div>
                </nav>


                <article class="hentry" style="background:#fff; padding:30px 0;">
                    <div class="entry-content">


                        <div class="woocommerce-MyAccount-content">
                            @Html.Action("GetProfileAddress", new { addressNum = 1 })

                            <br>
                            <hr>
                            @Html.Action("GetProfileAddress", new { addressNum = 2 })
                            <br>
                            <hr>
                            <form method="post" action="/home/SaveInvoiceAddress">

                                <h3>@Resources.InvoiceAddress</h3>
                                @if (Model.ErrorMessage != null)
                                {
                                    <p class="form-row form-row form-row-first validate-required" id="billing_first_name_field">
                                        @Model.ErrorMessage
                                    </p>

                                }

                                <p class="form-row form-row form-row-first validate-required" id="billing_first_name_field">
                                    <label for="billing_first_name" class="">@Resources.Name<abbr class="required" title="задължително">*</abbr></label>
                                    @Html.TextBoxFor(m => m.PersonName, new { @class = "input-text" })
                                </p>
                                <div class="clear"></div>

                                <p class="form-row form-row form-row-wide" id="billing_company_field">
                                    <label for="billing_company" class="">@Resources.CompanyName</label>
                                    @Html.TextBoxFor(m => m.CompanyName, new { @class = "input-text" })
                                </p>
                                <p class="form-row form-row " id="billing_bulstat_field">
                                    <label for="billing_bulstat" class="">@Resources.EIK</label>
                                    @Html.TextBoxFor(m => m.EIK, new { @class = "input-text" })
                                </p>
                                <div class="clear"></div>

                                <p class="form-row form-row " id="billing__field">
                                    <label for="billing_" class="">@Resources.VAT</label>
                                    @Html.TextBoxFor(m => m.VAT, new { @class = "input-text" })
                                </p>
                                <div class="clear"></div>


                                <p class="form-row form-row form-row-wide address-field update_totals_on_change validate-required" id="billing_country_field">
                                    <label for="billing_country" class="">@Resources.Country <abbr class="required" title="задължително">*</abbr></label>
                                    @Html.TextBoxFor(m => m.Country, new { @class = "input-text" })
                                </p>
                                <p class="form-row form-row form-row-wide address-field validate-required" id="billing_address_1_field">
                                    <label for="billing_address_1" class="">@Resources.Address<abbr class="required" title="задължително">*</abbr></label>
                                    @Html.TextBoxFor(m => m.CompanyAddress, new { @class = "input-text" })
                                </p>
                                <p class="form-row form-row form-row-last address-field validate-postcode validate-required" id="billing_postcode_field" data-o_class="form-row form-row form-row-last address-field validate-required validate-postcode">
                                    <label for="billing_postcode" class="">@Resources.PK <abbr class="required" title="задължително">*</abbr></label>
                                    @Html.TextBoxFor(m => m.PK, new { @class = "input-text" })
                                </p>
                                <div class="clear"></div>
                                <br>
                                <p>
                                    <input type="submit" class="button" name="save_address" value="@Resources.Save">
                                </p>

                            </form>





                        </div>




                    </div><!-- .entry-content -->
                </article>
            </div>
        </section>
    </div>

</div><!-- #content -->
