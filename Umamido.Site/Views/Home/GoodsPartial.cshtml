<script>
    function getQueryParam(param) {
        var result = null,
            tmp = [];
        location.search
            .substr(1)
            .split("&")
            .forEach(function (item) {
                tmp = item.split("=");
                if (tmp[0] === param) result = decodeURIComponent(tmp[1]);
            });
        return result;
    }
    var rid = getQueryParam('restaurantId');
    if (rid == null)
        rid = -1;
    Restaurant.ShowGoods(rid);
    Restaurant.ShowProperButton($("#hIsLogged").val() === "True")
</script>